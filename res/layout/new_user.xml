<?xml version="1.0" encoding="utf-8"?>
<!-- 新用户布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_newUserName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff" >

        <TextView
            android:id="@+id/tv_newUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="客户姓名"
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_new_input"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_newUserName"
            android:background="@null"
            android:ems="10"
             android:textSize="18sp"
            android:hint="请输入客户姓名" />
    </RelativeLayout>

    <View style="@style/line_style" />

    <RelativeLayout
        android:id="@+id/rl_newUserMobile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff" >

        <TextView
            android:id="@+id/tv_newUserMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="客户电话"
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_new_inputMobile"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_newUserMobile"
            android:background="@null"
            android:ems="10"
            android:hint="请输入客户电话"
             android:textSize="18sp"
            android:inputType="number"
            android:numeric="integer" />
    </RelativeLayout>

    <View style="@style/line_style" />

    <RelativeLayout
        android:id="@+id/rl_newUserAddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff" >

        <TextView
            android:id="@+id/tv_newUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="客户地址"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/et_new_inputAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_newUserAddress"
            android:background="@null"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="@string/selectaddress"
             />
    </RelativeLayout>

    <View style="@style/line_style" />

    <RelativeLayout
        android:id="@+id/rl_card"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff" >

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="用户卡号"
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_new_customer_card"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_card"
            android:background="@null"
            android:ems="10"
             android:textSize="18sp"
            android:hint="请输入卡号"
            android:inputType="number" />
    </RelativeLayout>

    <View style="@style/line_style" />

    <RadioGroup
        android:id="@+id/rg_user_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RadioButton
            android:id="@+id/rb_normal_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="居民用户" />

        <RadioButton
            android:id="@+id/rb_business_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="商业用户" />
    </RadioGroup>

    <View style="@style/line_style" />

</LinearLayout>