<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp" >

        <TextView
            android:id="@+id/tv_fuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="ï¿¥"
            android:textColor="#1E72B7"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_fuhao"
            android:layout_alignBottom="@+id/tv_fuhao"
            android:layout_toRightOf="@+id/tv_fuhao"
            android:text="11.00"
            android:textColor="#1E72B7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_weight1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_price"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="186dp"
            android:text="2"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_weight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_price"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="152dp"
            android:textColor="#333333"
            android:visibility="gone"
           />

        <ImageView
            android:id="@+id/iv_olderAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/add_1" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_olderAdd"
            android:layout_toLeftOf="@+id/iv_olderAdd"
            android:background="@drawable/num"
            android:text="0" 
            android:gravity="center">
			
            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/iv_olderSup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/et_input"
            android:layout_toLeftOf="@+id/et_input"
            android:src="@drawable/sup" />

    </RelativeLayout>

</LinearLayout>
